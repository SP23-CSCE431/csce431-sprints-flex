<%= form_with(model: @admin) do |form| %>
  <% if @admin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% @admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :full_name, style: "display: block" %>
    <%= form.text_field :full_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :role, style: "display: block" %>
    <% if @admin.role == 'Executive' %> 
      <%= form.select :role, options_for_select([['Member', 'Member'], ['Leader', 'Leader'], ['Executive', 'Executive']]) %>
    <% else %>
      <%= form.select :role, options_for_select([['Member', 'Member'], ['Leader', 'Leader']]) %>
    <% end %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>
