<p style="color: green"><%= notice %></p>

<h1>Reimbursement Categories</h1>

<%= link_to "Add Category", new_budget_category_path, role: "button" %>

<article id="point_categories">
  <table>
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @budget_categories.each do |budget_category| %>
        <%= render budget_category %>
      <% end %>  
    </tbody>
  </table>
</article>

